<Window x:Class="VGBClipRenamer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VGB Clip Renamer" Height="350" Width="525">
    <Grid>
        <Label Content="Drag .vgbclip / .xef file here" HorizontalAlignment="Left" Margin="133,109,0,0" VerticalAlignment="Top" AllowDrop="True" PreviewDragEnter="dragEnter" PreviewDragLeave="dragLeave" PreviewDrop="drop" PreviewDragOver="dragOver" Width="261"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="133,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" TextChanged="textBox_TextChanged"/>
        <Button Content="Rename" HorizontalAlignment="Left" Margin="319,173,0,0" VerticalAlignment="Top" Width="75" Click="renameButtonClicked"/>
    </Grid>
</Window>
